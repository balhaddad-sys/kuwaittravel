rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    function isPDF() {
      return request.resource.contentType == 'application/pdf';
    }

    function isUnder5MB() {
      return request.resource.size < 5 * 1024 * 1024;
    }

    function isUnder10MB() {
      return request.resource.size < 10 * 1024 * 1024;
    }

    // User profile photos and documents (sensitive — owner-only read)
    match /users/{userId}/{allPaths=**} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) && (isImage() || isPDF()) && isUnder5MB();
    }

    // Campaign media — public read, write requires uploader metadata for audit
    match /campaigns/{campaignId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
        && (isImage() || isPDF())
        && isUnder10MB()
        && request.resource.metadata['uploadedBy'] == request.auth.uid;
    }

    // Trip media — same as campaigns
    match /trips/{tripId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
        && (isImage() || isPDF())
        && isUnder10MB()
        && request.resource.metadata['uploadedBy'] == request.auth.uid;
    }

    // Booking documents — write requires uploader metadata for audit
    match /bookings/{bookingId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated()
        && (isImage() || isPDF())
        && isUnder5MB()
        && request.resource.metadata['uploadedBy'] == request.auth.uid;
    }
  }
}
